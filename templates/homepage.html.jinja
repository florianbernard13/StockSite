<body class="text-center">
  <div class="container-fluid">
    <div class="row flex-xl-nowrap">
      <div class="col"></div>
      <div class="col-xl-6">
        {% include 'components/mainDashBoard.html.jinja' %}
      </div>
      <div class="col align-self-center"></div>
    </div>

    <div class="row flex-xl-nowrap main-homepage-container">
      <div class="col-xl-12 market-background">
        <div id="chart_container"></div>
      </div>

      {% with
      panel_class='side-left homepage-layer',
      collapsed=true,
      content_template='components/analysis_dashboard/analyseDashboard.html.jinja'
      %}
      {% include 'components/panels/slidePanel.html.jinja' %}
      {% endwith %}

      {% with
      panel_class='side-right homepage-layer',
      collapsed=true,
      content_template='components/user_selections/userPreferences.html.jinja'
      %}
      {% include 'components/panels/slidePanel.html.jinja' %}
      {% endwith %}
    </div>

    <div class="row flex-xl-nowrap">
      <div class="col"></div>
      <div class="col-xl-6">
        {% include 'components/dataTools.html.jinja' %}
      </div>
      <div class="col align-self-center" style="height: inherit;"></div>
    </div>
  </div>

  <script type="module" src="{{ vite_asset('@vite/client') }}"></script>

  <script type="module" src="{{ vite_asset('ts/main.ts') }}"></script>
